<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#DF3F5E" />
            <gradient android:angle="-90" android:startColor="#DF3F5E"
                android:centerColor="#E81360"
                android:endColor="#79203D"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#DF3F5E" />
            <solid android:color="#DF3F5E"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#E81360" />
            <gradient android:angle="-90" android:startColor="#DF3F5E"
                android:centerColor="#E81360"
                android:endColor="#79203D" />
        </shape>
    </item>
</selector>